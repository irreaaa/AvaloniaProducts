<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AvaloniaProducts"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaProducts.Win"
        Title="Win">
	<Window.Resources>
		<local:EmptyListVisibilityConverter x:Key="EmptyListConverter" />
	</Window.Resources>
	<Window.Styles>
		<Style Selector="StackPanel > Button">
			<Setter Property="Foreground" Value="#cadbed"/>
			<Setter Property="BorderBrush" Value="#326da8"/>
			<Setter Property="Background" Value="#326da8" />
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="CornerRadius" Value="10"/>
		</Style>
		<Style Selector="StackPanel > Button:pointerover  /template/ ContentPresenter">
			<Setter Property="Foreground" Value="#cadbed"/>
			<Setter Property="BorderBrush" Value="#4478ab"/>
			<Setter Property="Background" Value="#4478ab" />
			<Setter Property="BorderThickness" Value="1"/>
		</Style>
	</Window.Styles>

	<StackPanel>
		<TextBlock Text="Продукты: " />
		<TextBlock x:Name="EmptyListMessage" Text="Список продуктов пуст." Foreground="Red" Visibility="{Binding Products, Converter={StaticResource EmptyListConverter}}" />
		<ListBox Name="ProductListBox" SelectionMode="Single">
			<ListBox.ItemTemplate>
				<DataTemplate DataType="local:Product">
					<StackPanel Orientation="Horizontal" Spacing="10">
						<TextBlock Text="{Binding ProductName}" Width="200" />
						<TextBlock Text=" Цена:" Width="50" />
						<TextBlock Text="{Binding ProductCost}"  Width="200" />
						<Button Click="Edit_Click" Content="Редактировать" />
						<Button Click="Del_Click" Content="Удалить" />
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		<Button Content="вернуться ->" FontFamily="Wellingthon" Width="150" Height="35" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Center" FontSize="18" Margin="5 30 5 5" Click="Return_Click"/>
	</StackPanel>
</Window>
