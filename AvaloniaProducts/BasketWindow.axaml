<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:AvaloniaProducts"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaProducts.BasketWindow"
        Title="BasketWindow">
	<Window.Styles>
		<Style Selector="StackPanel > Button">
			<Setter Property="Foreground" Value="#cadbed"/>
			<Setter Property="BorderBrush" Value="#326da8"/>
			<Setter Property="Background" Value="#326da8" />
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="CornerRadius" Value="10"/>
		</Style>
		<Style Selector="StackPanel > Button:pointerover  /template/ ContentPresenter">
			<Setter Property="Foreground" Value="#cadbed"/>
			<Setter Property="BorderBrush" Value="#4478ab"/>
			<Setter Property="Background" Value="#4478ab"/>
		</Style>
	</Window.Styles>
	<StackPanel>
		<Border MaxWidth="1970" MaxHeight="700">
			<ScrollViewer VerticalScrollBarVisibility="Auto">
				<StackPanel Orientation="Vertical">
					<TextBlock Text="Ваша корзина: " FontWeight="ExtraBold" FontSize="28" FontFamily="Wellingthon" Foreground="#326da8" Margin="20" />
					<ListBox Name="BasketListBox" SelectionMode="Single">
						<ListBox.ItemTemplate>
							<DataTemplate DataType="local:Product">
								<StackPanel Orientation="Horizontal" Spacing="10">
									<Image Source="avares://AvaloniaProducts/images/hp.jpg" Height="50" VerticalAlignment="Center"/>
									<TextBlock Text="{Binding ProductName}" Width="200" FontSize="19" Foreground="#326da8" Margin="5" VerticalAlignment="Center"/>
									<TextBlock Text=" x" Width="30" FontSize="19" FontFamily="Wellingthon" Foreground="#326da2" Margin="5" VerticalAlignment="Center"/>
									<Button Click="RemoveOneFromBasket_Click" Content="-" Cursor="Hand" VerticalAlignment="Center"/>
									<TextBlock Text="{Binding ProductQuantity}" Width="30" FontSize="19" FontFamily="Wellingthon" Foreground="#326da8" Margin="5 5 0 5" VerticalAlignment="Center"/>
									<Button Click="AddMoreToBasket_Click" Content="+" Cursor="Hand" VerticalAlignment="Center"/>
									<TextBlock Text="=" Width="30" FontSize="19" HorizontalAlignment="Right" FontFamily="Wellingthon" Foreground="#326da8" Margin="5 5 0 5" VerticalAlignment="Center"/>
									<TextBlock Text="{Binding ProductCost, StringFormat={}{0} руб.}" Width="100" FontSize="19" FontFamily="Wellingthon" Foreground="#326da8" Margin="5 5 0 5" VerticalAlignment="Center" />
									<Button Click="RemoveFromBasket_Click" Content="Удалить" Cursor="Hand" HorizontalAlignment="Right" VerticalAlignment="Center" >
										<Image Source="trash1.png" x:Name="BasketImage" Height="20"/>
									</Button>
								</StackPanel>
							</DataTemplate>
						</ListBox.ItemTemplate>
					</ListBox>
					<TextBlock x:Name="TotalTextBlock" Text="Итого: 0 ₽" FontSize="19" HorizontalAlignment="Left" FontFamily="Wellingthon" Foreground="#326da8" Margin="20 10 0 5" />
					<Button Content="Вернуться ->" FontFamily="Wellingthon" Cursor="Hand" Width="150" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="18" Margin="20 10 5 5" Click="Return_Click"/>
				</StackPanel>
			</ScrollViewer>
		</Border>
	</StackPanel>
</Window>